{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@theme/*": ["admin/theme/*"], 
      "@lib/*": ["admin/lib/*"], 
      "@front_end/*": ["front_end/src/*"], 
      "@shared/*": ["shared/*"],
      "@app/*": ["front_end/src/app/*"],
      "@api/*": ["front_end/src/api/*"],
      "@components/*": ["front_end/src/components/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "front_end/src/**/*",
    "admin/**/*",
    "shared/**/*",
    "back_end/**/*",
    "lib/**/*",
    "types/**/*", 
    "back_end/routes", 
    "back_end/app.ts"  ],
  "exclude": ["node_modules", "dist"]
}
