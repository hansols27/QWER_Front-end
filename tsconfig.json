{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@front/*": ["front_end/src/*"],
      "@app/*": ["front_end/src/app/*"],
      "@components/*": ["front_end/src/components/*"],
      "@utils/*": ["front_end/src/utils/*"],
      "@shared/*": ["shared/*"],
      "@theme/*": ["admin/theme/*"],
      "@lib/*": ["admin/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "front_end/src/**/*",
    "admin/**/*",
    "shared/**/*",
    "back_end/**/*",
    "lib/**/*",
    "back_end/routes",
    "back_end/app.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
