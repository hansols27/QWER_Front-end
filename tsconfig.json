{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".", 
    "paths": {
      "@front/*": ["front_end/src/*"],         // front_end 전용
      "@app/*": ["front_end/src/app/*"],       // front_end 앱
      "@api/*": ["front_end/src/utils/*"],     // front_end utils/api.ts
      "@components/*": ["front_end/src/components/*"],
      "@shared/*": ["shared/*"],               // 공용 타입/유틸
      "@theme/*": ["admin/theme/*"],           // admin 전용
      "@lib/*": ["admin/lib/*"]                // admin 전용
    }
  },
  "include": [
    "front_end/src/**/*", 
    "admin/**/*", 
    "shared/**/*", 
    "back_end/**/*", 
    "lib/**/*", 
    "types/**/*", 
    "back_end/routes", 
    "back_end/app.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
