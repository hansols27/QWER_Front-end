{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",       
    "baseUrl": ".",          
    "paths": {
      "@/*": ["front_end/src/*", "admin/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "front_end/src",
    "admin/**/*",
    "shared/**/*",
    "server/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
