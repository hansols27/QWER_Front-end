{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@theme/*": ["theme/*"],
      "@lib/*": ["lib/*"],
      "@shared/*": ["../shared/*"],       
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["../shared/services/*"] 
    },
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "../shared/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}